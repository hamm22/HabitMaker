<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="com.ham.habit.todo.repository.TodoRepository">

	<insert id="insertTodo" parameterType="map">
		INSERT INTO
			`to_do`
		(
			`userId`
			, `title`
			, `completed`
			, `description`
			, `goal`
		)
		VALUE 
		(
			#{userId}
			, #{title}
			, #{completed}
			, #{description}
			, #{goal}
		)
	</insert>
	
