	<select id="countByGroupIdAndUserId"  parameterType="map"
	resultType="int">
		SELECT
			count(*)
		FROM
			`group_members`
		WHERE
			`groupId` = #{groupId}
			AND `userId` = #{userId}
	</select>
	
	<select id="selectMemberList"
	resultType="com.ham.habit.member.domain.Member">
			SELECT
			`id`
			, `groupId`
			, `userId`
			, `completed`
			, `createdAt`
			, `updatedAt`
		FROM
			`group_members`
		WHERE
			`userId` = #{userId}	
		ORDER BY
			`id` DESC;
	</select>

</mapper>	