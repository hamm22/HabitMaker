<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.ham.habit.member.repository.MemberRepository">
 
	<insert id="insertMember" parameterType="map">
		INSERT INTO
			`group_members`
			(
				`groupId`
				, `userId`
				, `completed`
			)
		VALUE 
			(
				#{groupId}
				, #{userId}
				, #{completed}
			)
			
	</insert>
	
