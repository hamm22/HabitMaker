<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.ham.habit.member.repository.MemberRepository">
 
	<insert id="insertMember" parameterType="map">
		INSERT INTO
			`group_members`
			(
				`groupId`
				, `userId`
				, `completed`
			)
		VALUE 
			(
				#{groupId}
				, #{userId}
				, #{completed}
			)
			
	</insert>
	
	<select id="countByGroupIdAndUserId"  parameterType="map"
	resultType="int">
		SELECT
			count(*)
		FROM
			`group_members`
		WHERE
			`groupId` = #{groupId}
			AND `userId` = #{userId}
	</select>
	
	<select id="selectMemberList"
	resultType="com.ham.habit.member.domain.Member">
			SELECT
			`id`
			, `groupId`
			, `userId`
			, `completed`
			, `createdAt`
			, `updatedAt`
		FROM
			`group_members`
		WHERE
			`userId` = #{userId}	
		ORDER BY
			`id` DESC;
	</select>
	
	<select id="selectMember" parameterType="int"
		resultType="com.ham.habit.member.domain.Member">
			SELECT
			`id`
			, `groupId`
			, `userId`
			, `completed`
			, `createdAt`
			, `updatedAt`
		FROM
			`group_members`
		WHERE
			`groupId` = #{groupId}	
		ORDER BY
			`id` DESC;
	</select>
	
	<update id="updateCompleted" parameterType="map">
		UPDATE
			`group_members`
		SET
			`completed` = #{completed}
			, `updatedAt` = now()
		WHERE `id` = #{id}
				AND `groupId` = #{groupId}
	</update>
	
	<delete id="deleteMember" parameterType="int">
		DELETE FROM
			`group_members`
		WHERE
			`id` = #{id}
	</delete>

</mapper>	